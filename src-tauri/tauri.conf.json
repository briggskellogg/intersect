{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Intersect",
  "version": "0.9.0",
  "identifier": "com.intersect.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Intersect",
        "width": 1024,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "decorations": false,
        "resizable": true,
        "transparent": true,
        "shadow": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "entitlements.plist",
      "infoPlist": "Info.plist"
    }
  }
}
